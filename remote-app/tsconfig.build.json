{
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "importHelpers": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "jsx": "react-jsx"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "global.d.ts"],
  "exclude": ["node_modules"]
}
